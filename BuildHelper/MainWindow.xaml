<Controls:MetroWindow x:Name="MainWindow1" x:Class="BuildHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        ResizeMode="CanResizeWithGrip"
        EnableDWMDropShadow="True"           
        Title="Build Helper v 1.0" Height="375" Width="600" MinHeight="375" MinWidth="600" WindowStartupLocation="CenterScreen" Background="#FF323232" WindowStyle="ThreeDBorderWindow">
    <Controls:MetroWindow.Resources>
        <Color x:Key="Color1">#19FFFFFF</Color>
    </Controls:MetroWindow.Resources>
    <Controls:MetroWindow.TaskbarItemInfo>
        <TaskbarItemInfo Description="Build Helper" ProgressState="None"/>
    </Controls:MetroWindow.TaskbarItemInfo>
    <Grid x:Name="MainGrid" Margin="3,3,3,3">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="Launch" Content="LAUNCH BUILDS"  Style="{StaticResource AccentedSquareButtonStyle}" 
                Click="LaunchButton_OnClick"
                Margin="0,0,10,26" HorizontalAlignment="Right" Width="126" Height="27" VerticalAlignment="Bottom"/>
        <TextBox x:Name="ConfigTextbox" Height="26" Margin="10,0,163,27" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" 
                 Controls:TextBoxHelper.ClearTextButton="True"
                 Controls:TextBoxHelper.Watermark="Enter batch file path here!"/>
        <GroupBox x:Name="BuildOptions_Groupbox" Header="Build options" HorizontalAlignment="Left" Height="179" Margin="297,21,0,0" VerticalAlignment="Top" Width="126">
            <Grid x:Name="grpboxGrid" Margin="-3,2,-2,2">
                <CheckBox x:Name="x64D_checkbox" Content="Debug x64" HorizontalAlignment="Center" Height="25" Margin="10,40,0,0" VerticalAlignment="Top" Width="100" IsChecked="True" Foreground="White"/>
                <CheckBox x:Name="x64R_checkbox" Content="Release x64                   " HorizontalAlignment="Center" Height="25" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" IsChecked="True" Foreground="#FFFDFDFD"/>
                <CheckBox x:Name="x86R_checkbox" Content="Release x86" HorizontalAlignment="Center" Margin="10,70,0,0" VerticalAlignment="Top" IsChecked="True" Foreground="White" Width="100" Height="25"/>
                <CheckBox x:Name="x86D_checkbox" Content="Debug x86" HorizontalAlignment="Center" Margin="10,100,0,0" VerticalAlignment="Top" Foreground="White" IsChecked="True" Width="100" Height="25"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="Source_Control" Header="Source Control" HorizontalAlignment="Left" Height="179" Margin="10,21,0,0" VerticalAlignment="Top" Width="253">
            <Grid x:Name="Src_grid" HorizontalAlignment="Left" Height="150" Margin="-6,-4,-6,-6" VerticalAlignment="Top" Width="253">
                <TextBox x:Name="URL_SourceControl" HorizontalAlignment="Left" Height="14" Margin="10,29,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="233"
            		Controls:TextBoxHelper.ClearTextButton="True"
            		Controls:TextBoxHelper.Watermark="Enter Account URL"/>
                <TextBox x:Name="SourceControl_Pass" HorizontalAlignment="Left" Height="27" Margin="10,86,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="233"
                	Controls:TextBoxHelper.ClearTextButton="True"
                	Controls:TextBoxHelper.Watermark="Enter Password"/>
            </Grid>
        </GroupBox>
        <Controls:ProgressRing x:Name="status_progressRing" Foreground="{DynamicResource AccentColorBrush}" IsActive="False" Margin="450,112,10,107" Height="120" Width="126"/>
    </Grid>
</Controls:MetroWindow>
