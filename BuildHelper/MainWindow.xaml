<Controls:MetroWindow x:Name="MainWindow1" x:Class="BuildHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        ResizeMode="CanResizeWithGrip"
        EnableDWMDropShadow="True"           
        Title="Build Helper" Height="502" Width="669" MinHeight="375" MinWidth="600" WindowStartupLocation="CenterScreen" Background="#FF323232" WindowStyle="ThreeDBorderWindow">
    <Controls:MetroWindow.Resources>
        <Color x:Key="Color1">#19FFFFFF</Color>
    </Controls:MetroWindow.Resources>
    <Controls:MetroWindow.TaskbarItemInfo>
        <TaskbarItemInfo Description="Build Helper" ProgressState="None"/>
    </Controls:MetroWindow.TaskbarItemInfo>
    <Grid x:Name="MainGrid" Margin="3,3,13,19">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="Launch" Content="LAUNCH BUILDS"  Style="{StaticResource AccentedSquareButtonStyle}" 
                Click="LaunchButton_OnClick"
                Margin="0,0,0,-8" Height="27" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="126"/>
        <Controls:ProgressRing x:Name="status_progressRing" Foreground="{DynamicResource AccentColorBrush}" IsActive="False" Margin="0,0,0,42" Height="120" Width="126" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <Controls:MetroAnimatedSingleRowTabControl x:Name="maintabcontrol" Margin="10,10,163,10">
            <TabItem Header="Build Cfg">
                <Grid Background="#FF323232" Margin="0,4,-17,-4">
                    <GroupBox x:Name="BuildOptions_Groupbox_Copy" Header="Build options" HorizontalAlignment="Left" Height="182" Margin="313,37,0,0" VerticalAlignment="Top" Width="135">
                        <Grid x:Name="grpboxGrid1" Margin="-3,2,-2,2">
                            <CheckBox x:Name="x64D_checkbox1" Content="Debug x64" HorizontalAlignment="Center" Height="25" Margin="10,40,0,0" VerticalAlignment="Top" Width="100" Foreground="White" Checked="x64D_checkbox_CheckedChange" Unchecked="x64D_checkbox_CheckedChange"/>
                            <CheckBox x:Name="x64R_checkbox1" Content="Release x64" HorizontalAlignment="Center" Height="25" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Foreground="#FFFDFDFD" Checked="x64R_checkbox_CheckedChange" Unchecked="x64R_checkbox_CheckedChange"/>
                            <CheckBox x:Name="x86R_checkbox1" Content="Release x86" HorizontalAlignment="Center" Margin="10,70,0,0" VerticalAlignment="Top" Foreground="White" Width="100" Height="25" Checked="x86R_checkbox_CheckedChange" Unchecked="x86R_checkbox_CheckedChange"/>
                            <CheckBox x:Name="x86D_checkbox1" Content="Debug x86" HorizontalAlignment="Center" Margin="10,100,0,0" VerticalAlignment="Top" Foreground="White" Width="100" Height="25" Checked="x86D_checkbox_CheckedChange" Unchecked="x86D_checkbox_CheckedChange"/>
                        </Grid>
                    </GroupBox>
                    <Button x:Name="removeproject_button" Content="Remove project" Margin="0,0,373,14"
                    	Style="{StaticResource AccentedSquareButtonStyle}" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="106" Click="removeproject_button_Click"/>
                    <Label Content="Choose project" Foreground="White"  HorizontalAlignment="Left" Height="27" Margin="10,10,0,0" VerticalAlignment="Top" Width="191" FontSize="14" Background="{x:Null}" FontFamily="Times New Roman"/>
                    <ListBox x:Name="ProjectListBox" HorizontalAlignment="Left" Height="197" Margin="10,42,0,0" VerticalAlignment="Top" Width="248" SelectionChanged="ProjectListBox_SelectionChanged"/>
                    <Button x:Name="createProject_button" Content="Add Project" Margin="0,0,231,14"
                    	Style="{StaticResource AccentedSquareButtonStyle}" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="116" Click="createProject_button_Click"/>
                    <TextBox x:Name="Projectname_textbox" Height="26" Margin="10,0,27,105" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" 
                    	Controls:TextBoxHelper.ClearTextButton="True"
                    	Controls:TextBoxHelper.Watermark="Enter short project name here!"/>
                    <TextBox x:Name="Projectpath_textbox" Height="26" Margin="10,0,27,64" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" 
                    	Controls:TextBoxHelper.ClearTextButton="True"
                    	Controls:TextBoxHelper.Watermark="Enter project file path here!" TextChanged="Projectpath_textbox_TextChanged" Background="White"/>
                </Grid>
            </TabItem>
            <TabItem Header="VCS ">
                <Grid Background="#FF363636">
                    <GroupBox x:Name="Source_Control" Header="Source Control" HorizontalAlignment="Left" Height="179" Margin="57,52,0,0" VerticalAlignment="Top" Width="346">
                        <Grid x:Name="Src_grid" Height="150" Margin="-6,-4,9,-6" VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="URL_SourceControl" Height="14" Margin="10,29,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"
                				Controls:TextBoxHelper.ClearTextButton="True"
                				Controls:TextBoxHelper.Watermark="Enter Account URL"/>
                            <TextBox x:Name="SourceControl_Pass" Height="27" Margin="10,86,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"
                				Controls:TextBoxHelper.ClearTextButton="True"
                				Controls:TextBoxHelper.Watermark="Enter Password"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Schedule">
                <Grid Background="#FF323232"/>
            </TabItem>
            <Grid Margin="10,10,10,8"/>
        </Controls:MetroAnimatedSingleRowTabControl>
    </Grid>
</Controls:MetroWindow>
